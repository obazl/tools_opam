load("@rules_cc//cc:defs.bzl", "cc_test")
load("@makeheaders//rules:makeheaders.bzl", "makeheaders")

cc_test(
    name = "pkg",
    timeout = "short",
    srcs = ["dune_pkg_test.c",
            "test_init.c",
            "//lib:dune-package.c",
            ":mkhdrs"],
    deps = [
        "@gopt//lib:gopt",
        "@liblogc//lib:logc",
        "@runfiles//lib:runfiles",
        "@sfsexp//src:sfsexp",
        "@unity//lib:unity",
        "@uthash//lib:uthash",
    ],
    copts = ["-Ilib", "-I$(GENDIR)/test/dune"],
    local_defines = [
        "BAZEL_CURRENT_REPOSITORY=\\\"{}\\\"".format(package_relative_label("@tools_opam").repo_name)
    ],
    data = ["//test/data:dune-package_files"],
    visibility = ["//visibility:public"]
)


makeheaders(
    name = "mkhdrs",
    hdrs_srcs = [
        "dune_pkg_test.c",
        "test_init.c",
        "//lib:dune-package.c",
    ],
    additional_srcs = [
    ] + select({
        "@obazl_config_cc//profile:dev?": [
            "@liblogc//macros:ansi_colors.h",
            "@liblogc//macros:logging_debug.h",
        ],
        "//conditions:default": [
            "@liblogc//macros:logging_ndebug.h",
        ]
    }),
)
